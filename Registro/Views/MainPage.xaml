<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:Registro.ViewModels"
             x:Class="Registro.MainPage"
             BackgroundColor="#FDF7F7"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <Image Source="huella22.png"
                  HeightRequest="95"
                  HorizontalOptions="Start"
                  Margin="-20,0,0,-120"
                  />
            
            <ImageButton Source="flechanegro.png"
             HeightRequest="50"
             Margin="-290,15,0,-90"
             Clicked="regreso" />

            <Image Source="huella1.png"
                  HeightRequest="95"
                  HorizontalOptions="Start"
                  Margin="235,20,0,0"/>  


            <Label Text="Bienvenid@ a"
                   FontSize="22"
                   HorizontalOptions="Center"
                   TextColor="#6B4F4F"
                   Margin="0,-60,0,0"
                   />

            <Label Text="Pet Tik-tac"
                   FontSize="38"
                   FontAttributes="Italic,Bold"
                   HorizontalOptions="Center"
                   TextColor="#6B4F4F"
                   />
            <Image Source="hueso.png"
                    HeightRequest="95"
                    HorizontalOptions="Start"
                    Margin="235,20,0,-150"/>
            
            <Image Source="huella4.png"
                    HeightRequest="95"
                    HorizontalOptions="Start"
                    Margin="-15,20,0,-130"/>


            <Frame BackgroundColor="#AC8764"
                   CornerRadius="40"
                   Padding="40"
                   Margin="0,150,0,0"
                   VerticalOptions="EndAndExpand"
                   HorizontalOptions="FillAndExpand">
                
                <VerticalStackLayout Spacing="15" VerticalOptions="CenterAndExpand">
                    
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" >
                        
                        <Label Text="Restablecer contraseña"
                           FontSize="19"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"
                               Margin="-5,0,26,0"
                           />
                        <Image Source="huella3.png"
                             HeightRequest="30"
                             WidthRequest="30"
                             VerticalOptions="Center"
                             Margin="-35,-6,0,-5"/>
                        
                    </HorizontalStackLayout>

                    <Label Text="Nueva contraseña"
                           TextColor="White"
                           FontSize="15"/>
                    <Frame CornerRadius="20"
                           Padding="1"
                           BackgroundColor="White"
                           BorderColor="Gray"
                           HasShadow="False"
                           Opacity="0.7">   
                        <HorizontalStackLayout>
                            <Entry x:Name="NuevaContrasenaEntry"
                                   Placeholder="Ingresa tu nueva contraseña"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="#6B4F4F"
                                   WidthRequest="191"
                                   Margin="5,0,0,0"
                                   Text="{Binding NuevaContraseña}"/>
                            <ImageButton x:Name="MostrarNuevaContrasena"
                                         Source="ojocerrado.png"
                                         HeightRequest="30"
                                         WidthRequest="30"
                                         BackgroundColor="Transparent"
                                         Clicked="MostrarOcultarNuevaContrasena"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <Label Text="Confirmar contraseña"
                           TextColor="White"
                           FontSize="15"/>
                    <Frame CornerRadius="20"
                           Padding="1"
                           BackgroundColor="White"
                           BorderColor="Gray"
                           HasShadow="False"
                           Opacity="0.7">
                        <HorizontalStackLayout>
                            <Entry x:Name="ConfirmarContrasenaEntry"
                                   Placeholder="Confirma tu nueva contraseña"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="#6B4F4F"
                                   WidthRequest="191"
                                   Margin="0,0,0,0"
                                   Text="{Binding ConfirmarContraseña}"/>
                            <ImageButton x:Name="MostrarConfirmarContrasena"
                                         Source="ojocerrado.png"
                                         HeightRequest="30"
                                         WidthRequest="30"
                                         BackgroundColor="Transparent"
                                         Clicked="MostrarOcultarConfirmarContrasena"
                                         Margin="0,0,0,0"/>
                        </HorizontalStackLayout>
                    </Frame>
                    <Button Text="Cambiar contraseña"
                            BackgroundColor="#AC8764"
                            TextColor="White"
                            CornerRadius="20"
                            HeightRequest="50" 
                            WidthRequest="200"
                            Margin="0,45,0,100"
                            BorderColor="White"
                            BorderWidth="3"
                            Command="{Binding CambiarContraseñaCommand}"
                            />
                </VerticalStackLayout>
                
            </Frame>
                    <Image Source="perro.png"
                          HeightRequest="215"
                          HorizontalOptions="Start"
                          Margin="85,-698,0,-45"/>


            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
