<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registro.Registro"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FDF7F7">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Imágenes iniciales -->
            <Image Source="huella22.png"
                HeightRequest="95"
                HorizontalOptions="Start"
                Margin="-20,1,0,-120"/>

            <Image Source="huella1.png"
                HeightRequest="95"
                HorizontalOptions="Start"
                Margin="234,20,0,0"/>

            <Label Text="Welcome to"
                   FontSize="22"
                   HorizontalOptions="Center"
                   TextColor="#6B4F4F"
                   Margin="0,-95,0,0" />

            <Label Text="Pet Tik-tac"
                   FontSize="38"
                   FontAttributes="Italic,Bold"
                   HorizontalOptions="Center"
                   TextColor="#6B4F4F" />

            <Image Source="hueso.png"
                HeightRequest="95"
                HorizontalOptions="Start"
                Margin="235,20,0,-150"/>

            <Image Source="huella4.png"
                HeightRequest="95"
                HorizontalOptions="Start"
                Margin="-15,20,0,-130"/>

            <Frame BackgroundColor="#AC8764"
                   CornerRadius="40"
                   Padding="40"
                   Margin="0,125,0,0"
                   VerticalOptions="EndAndExpand"
                   HorizontalOptions="FillAndExpand">
                <VerticalStackLayout Spacing="15" VerticalOptions="CenterAndExpand">

                    <!-- Título de registro -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Label Text="Registrate"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="White"
                               Margin="0,0,10,0" />
                        <Image Source="huella3.png"
                               HeightRequest="40"
                               WidthRequest="40"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Campo de Nombre -->
                    <Label Text="Nombre"
                           TextColor="White"
                           FontSize="15"/>
                    <Frame CornerRadius="20"
                           Padding="1"
                           BackgroundColor="White"
                           BorderColor="#6B4F4F"
                           HasShadow="False"
                           Opacity="0.7">
                        <Entry Placeholder="Ingresa tu nombre de usuario"
                               BackgroundColor="Transparent"
                               TextColor="#6B4F4F"
                               Margin="5,0,15,0" />
                    </Frame>

                    <!-- Campo de Email -->
                    <Label Text="Email"
                           TextColor="White"/>
                    <Frame CornerRadius="20"
                           Padding="1"
                           BackgroundColor="White"
                           BorderColor="#6B4F4F"
                           HasShadow="False"
                           Opacity="0.7">
                        <Entry Placeholder="Ingresa tu Email"
                               BackgroundColor="Transparent"
                               TextColor="#6B4F4F"
                               Margin="5,0,15,0"/>
                    </Frame>

                    <!-- Campo de Contraseña -->
                    <Label Text="Contraseña"
                           TextColor="White"/>
                    <Frame CornerRadius="20"
                           Padding="1"
                           BackgroundColor="White"
                           BorderColor="#6B4F4F"
                           HasShadow="False"
                           Opacity="0.7">
                        <Grid>
                            <Entry x:Name="ContraseñaEntry"
                                   Placeholder="Ingresa tu contraseña"
                                   IsPassword="{Binding ContraseñaEsOculta}"
                                   BackgroundColor="Transparent"
                                   TextColor="#6B4F4F"
                                   Margin="5,0,50,0"/>
                            <!-- Icono del ojo -->
                            <ImageButton x:Name="OjoIcono"
                                         Source="ojocerrado.png"
                                         HeightRequest="25"
                                         WidthRequest="25"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="End"
                                         Margin="0,0,10,0"
                                         Clicked="ToggleContraseñaVisibilidad"/>
                        </Grid>
                    </Frame>

                    <!-- Enlace a inicio de sesión -->
                    <Label Text="¿Ya tienes una cuenta? Inicia sesión"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="White"
                           Margin="0,0,0,150">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Iniciarsesion" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Frame>

            <!-- Imagen de perro -->
            <Image Source="perro.png"
                  HeightRequest="215"
                  HorizontalOptions="Start"
                  Margin="85,-785,0,0"/>

            <!-- Botón de continuar -->
            <Button Text="Continuar"
                    BackgroundColor="#AC8764"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="150"
                    BorderColor="White"
                    BorderWidth="3"
                    Margin="0,350,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>